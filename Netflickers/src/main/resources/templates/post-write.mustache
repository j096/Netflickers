 {{>layout/header}}
    <h1>글쓰기</h1>
    <div>
    {{#post.id}}
     <form id="form-post">
     	<input type="hidden" class="form-control" id="id" name="id" value="{{post.id}}" disabled>
        <div class="form-group">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" name="title" value="{{post.title}}">
        </div>
        <div class="form-group">
            <label for="writer">작성자</label>
            <input type="text" class="form-control" id="writer" name="writer" value="{{post.writer}}" readonly>
        </div>
        <div class="form-group">
            <label for="content" class="form-label">내용</label>
            <textarea class="form-control form-control-lg" id="content" name="content">{{post.content}}</textarea>
        </div>
    </form>
    <a href="/" role="button" class="btn btn-secondary">취소</a>
    <button type="button" class="btn btn-primary" id="btn-save" onClick="postForm('form-post','/post/update/{{id}}','PUT')">수정</button>    
    {{/post.id}}
