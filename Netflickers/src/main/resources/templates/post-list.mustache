  {{>layout/header}}
    <h1>게시판목록</h1>
    <div class="text-end mb-8px">
        <button type="button" class="btn btn-primary" onClick="goTo('/post/write')">글쓰기</button>
    </div>
    <table class="table table-horizontal table-bordered table-hover">
    	<thead class="thead-strong">
    	<tr>
    		<th class="text-center">No.</th>
    		<th class="col-8">제목</th>   
    		<th class="text-center">작성일자</th>    
    		<th class="text-center">조회수</th>    				 		
    	</tr>
    	</thead>
    	<tbody>
    	{{#postings}}
    	<tr>
	    	<td class="text-center">{{id}}</td>
	    	<td><a href="/post/read/{{id}}">{{title}}</a></td>
	    	<td class="text-center">{{createdDate}}</td>
	    	<td class="text-center">{{views}}</td>
    	</tr>
    	{{/postings}}
    	</tbody>
    </table>
 {{>layout/pagination}}
 {{>layout/footer}}