 {{>layout/header}}
    <h1>글읽기</h1>
    <div>
     <form id="form-post">
     	<input type="hidden" class="form-control" id="id" name="id" value="{{post.id}}" disabled>
     	<div class="form-group">
     		작성일시: <input type="text" class="form-control" id="createdDate" value="{{post.createdDate}}" readonly>
     		{{#post.modifiedDate}}
     		수정일시: <input type="text" class="form-control" id="modifiedDate" value="{{post.modifiedDate}}" readonly>
     		{{/post.modifiedDate}}
     	</div>
        <div class="form-group">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" name="title" value="{{post.title}}" readonly>
        </div>
        <div class="form-group">
            <label for="writer">작성자</label>
            <input type="text" class="form-control" id="writer" name="writer" value="{{post.writer}}" readonly>
        </div>
        <div class="form-group">
            <label for="content" class="form-label">내용</label>
            <textarea class="form-control form-control-lg" id="content" name="content" readonly>{{post.content}}</textarea>
        </div>
    </form>
    <button type="button" class="btn btn-primary" id="btn-save" onClick="goTo('/post/write/{{post.id}}')">수정</button>
    <button type="button" class="btn btn-primary" id="btn-save" onClick="postForm('form-post','/post/delete/{{id}}','DELETE')">삭제</button>
    
    </div>
 {{>layout/footer}}
    